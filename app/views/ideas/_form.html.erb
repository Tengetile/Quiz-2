<% if @idea.errors.any? %>

  <ul>
    <% @idea.errors.full_messages.each do |error| %>
      <li>  <%= error %> </li>
      <%end%>
  </ul>

<% end %>

<%= form_for @idea do |f| %>

  <div class="form-group">
     <%= f.label :title %>
    <%= f.text_field :title %>
  </div>

  <div class="form-group">
    <%= f.label :description %>
    <%= f.text_area :description %>
  </div>

  <%= f.submit class: "btn btn-primary" %>

<% end %> 

